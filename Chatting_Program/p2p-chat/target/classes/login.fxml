<?xml version="1.0" encoding="UTF-8"?>
<!-- XML 선언: 문서가 UTF-8 인코딩의 XML임을 알림 -->

<?import javafx.geometry.*?>
<!-- JavaFX의 레이아웃 여백/정렬 등에 쓰는 기하(geometry) 패키지 클래스들(예: Insets)을 import -->

<?import javafx.scene.control.*?>
<!-- JavaFX 컨트롤들(Label, TextField, PasswordField, Button 등)을 import -->

<?import javafx.scene.layout.*?>
<!-- JavaFX 레이아웃 컨테이너들(VBox, HBox 등)을 import -->

<?import javafx.scene.text.*?>
<!-- JavaFX 텍스트 관련 클래스(Font 등)을 import -->

<!-- 루트 컨테이너: VBox
     - alignment="CENTER": 자식들을 가운데 정렬
     - prefHeight/prefWidth: 선호 크기(화면 초기 배치 힌트)
     - maxWidth="360.0": 폭 최대 360px로 제한(가로로 늘어나지 않게)
     - spacing="20.0": 자식 노드 간 간격 20px
     - style: 배경 회색(#f4f4f4)
     - xmlns: JavaFX 런타임 네임스페이스(버전 17)
     - xmlns:fx: FXML 네임스페이스
     - fx:controller: 이 FXML을 제어할 컨트롤러 클래스 -->
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="360.0" maxWidth="360.0" spacing="20.0"
      style="-fx-background-color: #f4f4f4;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.chat.LoginController">

    <!-- 전체 VBox의 안쪽 여백(padding) 설정 -->
    <padding>
        <!-- Insets: 위/오른쪽/아래/왼쪽 모두 20px -->
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <!-- 상단 제목 라벨: '로그인'
         - textFill: 글자색 진한 회색
         - 내부 <font>로 볼드+크기 24 설정 -->
    <Label text="로그인" textFill="#2e2e2e">
        <font>
            <!-- System Bold 폰트, 크기 24 -->
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <!-- 입력 영역 컨테이너: 아이디/비밀번호 줄을 세로로 배치
         - alignment="CENTER": 가운데 정렬
         - spacing="10.0": 줄 간 간격 10px -->
    <VBox alignment="CENTER" spacing="10.0">
        <!-- 아이디 입력 줄: 라벨 + 텍스트필드를 가로로 배치
             - alignment="CENTER_LEFT": 좌측 정렬
             - spacing="10.0": 컨트롤 간 간격 10px -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <!-- '아이디:' 라벨. minWidth로 라벨 폭을 고정해 정렬을 맞춤 -->
            <Label minWidth="80.0" text="아이디:" />
            <!-- 아이디 입력 TextField
                 - fx:id="idField": 컨트롤러에서 접근할 필드명
                 - promptText: 힌트 텍스트
                 - prefWidth: 선호 폭 200px -->
            <TextField fx:id="idField" promptText="아이디를 입력하세요" prefWidth="200.0" />
        </HBox>

        <!-- 비밀번호 입력 줄: 라벨 + 비밀번호 필드를 가로로 배치 -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <!-- '비밀번호:' 라벨(폭 80px로 정렬 기준 맞춤) -->
            <Label minWidth="80.0" text="비밀번호:" />
            <!-- 비밀번호 입력 PasswordField
                 - fx:id="passwordField": 컨트롤러에서 접근
                 - promptText: 힌트 텍스트
                 - prefWidth: 선호 폭 200px -->
            <PasswordField fx:id="passwordField" promptText="비밀번호를 입력하세요" prefWidth="200.0" />
        </HBox>
    </VBox>

    <!-- 로그인 버튼
         - onAction="#handleLogIn": 클릭 시 컨트롤러의 handleLogIn() 호출
         - prefWidth="150.0": 버튼 선호 폭
         - style: 초록색 배경, 흰 글씨, 볼드, 모서리 5px 라운딩 -->
    <Button onAction="#handleLogIn"
            prefWidth="150.0"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
            text="로그인" />

    <!-- 상태/안내 메시지 라벨(로그인 실패 등 표시)
         - fx:id="statusLabel": 컨트롤러에서 텍스트 설정
         - alignment="CENTER": 중앙 정렬
         - prefWidth="300.0": 선호 폭
         - textFill="#e53935": 빨간색 계열 텍스트(오류 강조)
         - wrapText="true": 줄바꿈 허용 -->
    <Label fx:id="statusLabel"
           alignment="CENTER"
           prefWidth="300.0"
           textFill="#e53935"
           wrapText="true">
        <font>
            <!-- 본문 폰트 크기 12 -->
            <Font size="12.0" />
        </font>
    </Label>

    <!-- 하단 보조 영역: '계정이 없으신가요?' + '회원가입' 버튼 -->
    <VBox alignment="CENTER" spacing="5.0">
        <!-- 안내 라벨 -->
        <Label text="계정이 없으신가요?" />
        <!-- 회원가입 화면으로 전환하는 버튼
             - onAction="#handleSignUpView": 컨트롤러 메서드 호출
             - 파란 배경, 흰 글씨, 볼드, 모서리 5px 라운딩 -->
        <Button onAction="#handleSignUpView"
                prefWidth="150.0"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                text="회원가입" />
    </VBox>

</VBox>
<!-- 루트 VBox 종료 -->
