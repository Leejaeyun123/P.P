<?xml version="1.0" encoding="UTF-8"?>
<!-- XML 선언: 문서가 UTF-8 인코딩의 XML임을 알림 -->

<?import javafx.geometry.*?>
<!-- JavaFX의 레이아웃 여백/정렬 등에 쓰는 기하 패키지(예: Insets) 임포트 -->

<?import javafx.scene.control.*?>
<!-- JavaFX 컨트롤들(Label, TextField, PasswordField, Button 등) 임포트 -->

<?import javafx.scene.layout.*?>
<!-- JavaFX 레이아웃 컨테이너들(VBox, HBox 등) 임포트 -->

<?import javafx.scene.text.*?>
<!-- JavaFX 텍스트 관련 클래스(Font 등) 임포트 -->

<VBox alignment="CENTER"
      prefHeight="400.0"
      prefWidth="360.0"
      maxWidth="360.0"
      spacing="20.0"
      style="-fx-background-color: #f4f4f4;"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.chat.LoginController">
<!-- 루트 컨테이너: VBox
     - alignment="CENTER": 자식 컴포넌트들을 가운데 정렬
     - prefHeight/prefWidth: 선호 크기(초기 배치 힌트)
     - maxWidth="360.0": 폭을 360px로 제한(너무 넓어지지 않게)
     - spacing="20.0": 자식 간 세로 간격 20px
     - style: 배경 회색(#f4f4f4)
     - xmlns: JavaFX/FXML 네임스페이스 지정
     - fx:controller: 이 화면을 제어할 컨트롤러 클래스 지정 -->

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
        <!-- 루트 VBox의 안쪽 여백: 상/우/하/좌 20px -->
    </padding>
    <!-- padding 블록 끝 -->

    <Label text="회원가입" textFill="#2e2e2e">
        <!-- 상단 제목 라벨: '회원가입', 글자색 진한 회색 -->
        <font>
            <Font name="System Bold" size="24.0" />
            <!-- 볼드 폰트, 크기 24pt -->
        </font>
    </Label>
    <!-- 제목 라벨 끝 -->

    <VBox alignment="CENTER" spacing="10.0">
        <!-- 입력 영역(아이디/별명/비밀번호)을 세로로 배치하는 컨테이너
             - alignment="CENTER": 가운데 정렬
             - spacing="10.0": 줄 간 간격 10px -->

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <!-- 아이디 입력 줄: 라벨 + 텍스트필드를 가로 배치
                 - alignment="CENTER_LEFT": 좌측 정렬
                 - spacing="10.0": 컨트롤 간 간격 10px -->
            <Label minWidth="80.0" text="아이디:" />
            <!-- '아이디:' 라벨, minWidth=80으로 정렬 기준 확보 -->
            <TextField fx:id="idField" promptText="아이디를 입력하세요" prefWidth="200.0" />
            <!-- 아이디 입력 TextField
                 - fx:id="idField": 컨트롤러에서 접근할 필드명
                 - promptText: 힌트 텍스트
                 - prefWidth=200: 선호 폭 -->
        </HBox>
        <!-- 아이디 입력 HBox 끝 -->

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <!-- 별명 입력 줄: 라벨 + 텍스트필드 -->
            <Label minWidth="80.0" text="별명:" />
            <!-- '별명:' 라벨, 폭 80px -->
            <TextField fx:id="nicknameField" promptText="채팅에서 사용할 별명 입력" prefWidth="200.0" />
            <!-- 별명 입력 TextField
                 - fx:id="nicknameField": 컨트롤러에서 읽어 회원가입 시 사용
                 - promptText: 힌트
                 - prefWidth=200 -->
        </HBox>
        <!-- 별명 입력 HBox 끝 -->

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <!-- 비밀번호 입력 줄: 라벨 + 패스워드필드 -->
            <Label minWidth="80.0" text="비밀번호:" />
            <!-- '비밀번호:' 라벨, 폭 80px -->
            <PasswordField fx:id="passwordField" promptText="비밀번호를 입력하세요" prefWidth="200.0" />
            <!-- 비밀번호 입력 PasswordField
                 - fx:id="passwordField": 컨트롤러에서 읽어 회원가입 시 사용
                 - promptText: 힌트
                 - prefWidth=200 -->
        </HBox>
        <!-- 비밀번호 입력 HBox 끝 -->

    </VBox>
    <!-- 입력 영역 VBox 끝 -->

    <Button onAction="#handleSignUp"
            prefWidth="150.0"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
            text="회원가입" />
    <!-- 회원가입 버튼
         - onAction="#handleSignUp": 클릭 시 컨트롤러의 handleSignUp() 호출
         - 파란 배경/흰 글씨/볼드/모서리 5px 라운딩
         - 선호 폭 150px -->

    <Label fx:id="statusLabel"
           alignment="CENTER"
           prefWidth="300.0"
           textFill="#e53935"
           wrapText="true">
        <!-- 진행/오류 메시지 표시 라벨
             - fx:id="statusLabel": 컨트롤러에서 동적으로 텍스트 설정
             - alignment="CENTER": 중앙 정렬
             - prefWidth=300: 선호 폭
             - textFill: 빨간색(오류 강조)
             - wrapText=true: 길면 줄바꿈 -->
        <font>
            <Font size="12.0" />
            <!-- 본문 폰트 크기 12pt -->
        </font>
    </Label>
    <!-- 상태 라벨 끝 -->

    <VBox alignment="CENTER" spacing="5.0">
        <!-- 하단 보조 영역: '이미 계정이 있으신가요?' + '로그인' 버튼 -->
        <Label text="이미 계정이 있으신가요?" />
        <!-- 안내 문구 라벨 -->
        <Button onAction="#handleLogInView"
                prefWidth="150.0"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                text="로그인" />
        <!-- 로그인 화면으로 전환 버튼
             - onAction="#handleLogInView": 컨트롤러의 로그인 화면 전환 메서드 호출
             - 초록 배경/흰 글씨/볼드/모서리 5px 라운딩
             - 선호 폭 150px -->
    </VBox>
    <!-- 하단 보조 VBox 끝 -->

</VBox>
<!-- 루트 VBox 끝 -->
